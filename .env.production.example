# Environment Template for Production
# Copy to .env and fill in with actual values

# ========== Application ==========
APP_NAME=Avicenna AI
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ========== Database ==========
# PostgreSQL connection string
DATABASE_URL=postgresql://avicenna_user:your_secure_password@postgres:5432/avicenna_ai
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ========== Redis/Cache ==========
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password
CACHE_DEFAULT_TIMEOUT=3600
CACHE_PREDICTION_TIMEOUT=86400

# ========== Security ==========
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=168
REFRESH_TOKEN_EXPIRE_DAYS=30

# ========== CORS ==========
ALLOWED_ORIGINS=https://your_domain.com,https://www.your_domain.com,https://app.your_domain.com

# ========== Rate Limiting ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========== File Uploads ==========
MAX_UPLOAD_SIZE_MB=5
UPLOAD_DIRECTORY=/tmp/uploads
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,image/webp

# ========== External APIs ==========
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_optional

# ========== Email Configuration ==========
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@your_domain.com

# ========== Monitoring ==========
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/avicenna/app.log

# ========== Prometheus Metrics ==========
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# ========== Feature Flags ==========
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ML_PREDICTIONS=true
ENABLE_ADMIN_PANEL=true

# ========== Deployment Info ==========
DEPLOYMENT_DATE=2025-01-01
DEPLOYMENT_VERSION=1.0
DEPLOYMENT_REGION=us-east-1
